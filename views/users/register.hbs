<div class="container-fluid">
    <div class="row justify-content-center">
        <h2>Register</h2>
    </div>
    <div class="row justify-content-center">
        {{>user_messages}}
    </div>
</div>

<form method="post" action="/users/register">
    <div class="container-fluid">
        <div class="form-group row justify-content-center mb-8">
            <div class="col-1 col-md-3"></div>
            <div class="col-9 col-md-4 text-left font-weight-bold">
                <label class="col-form-label" for="firstName">First Name: </label>
            </div>
            <div class="col-1 col-md-3"></div>
            <div class="col-9 col-md-4">
                <input class="form-control" id="firstName" type="text" name="first" required><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-8">
            <div class="col-1 col-md-3"></div>
            <div class="col-9 col-md-4 text-left font-weight-bold">
                <label class="col-form-label" for="lastName">Last Name: </label>
            </div>
            <div class="col-1 col-md-3"></div>
            <div class="col-9 col-md-4">
                <input class="form-control" id="lastName" type="text" name="last" required><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-8">
            <div class="col-1 col-md-3"></div>
            <div class="col-9 col-md-4 text-left font-weight-bold">
                <label class="col-form-label" for="password">Password: </label>
            </div>
            <div class="col-1 col-md-3"></div>
            <div class="col-9 col-md-4">
                <input class="form-control" id="password" type="password" name="password" required><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-8">
            <div class="col-1 col-md-3"></div>
            <div class="col-9 col-md-4 text-left font-weight-bold">
                <label class="col-form-label" for="email">Email: </label>
            </div>
            <div class="col-1 col-md-3"></div>
            <div class="col-9 col-md-4">
                <input class="form-control" id="email" type="email" name="email" required><br/>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <input class="btn btn-warning col-2" type="submit" value="Submit"/>
        </div>
    </div>
</form>